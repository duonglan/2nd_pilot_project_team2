<% provide(:title, "All Albums") %>
<div class="left-sidebar">
  <%= render "layouts/left_sidebar" %>
</div>
<div class="main-content">
  <% if current_user.id == @user.id %>
    <h1>
      Your Albums (<%= @user.albums.count %>)
    </h1>
    <%= link_to "New albums", new_user_album_path(current_user), class: "btn btn floatright" %>
  <% else %>
    <h1>
      <%= @user.name %> 's albums (<%= @user.albums.count %>)
    </h1>
  <% end %>
  <ul>
    <% @albums.each do |album| %>
      <br/>
      <li>
        Album: "<%= link_to album.name, user_album_path(current_user, album) %>" (<%= album.images.count %> photos)
        <%if album.user_id == current_user.id%>
          <%= link_to "Del", user_album_path(current_user, album), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </li>
      <br/>
        <% album.images.limit(1).each do |image| %>
          <%= link_to image_tag(image.image.url(:small)),user_album_image_path(current_user, album, image), class: "avatar-large" %>
        <% end %>
    <% end %>
  </ul>
</div>