<% if user.avatar.blank? %>
  <%= link_to image_tag("no_ava.jpg"), user, class: "avatar-large" %>
<% elsif user.avatar? %>
  <%= link_to image_tag(user.avatar), user, class: "avatar-large" %>
<% end %>
<h3 class="user-name">
  <%= user.name %>
</h3>
<% if current_user?(user) %>
  <span>
    <%= link_to "Edit profile", edit_user_path(user) %>
  </span>
<% end %>