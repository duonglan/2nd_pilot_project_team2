<h1>Group:</h1>
<h3 class="group-name">
  <%= @group.name %>
</h3>
<% if @group.joined?(current_user) || @group.owned?(current_user) %>
  <%= render "shared/add_friend_group", users: current_user.friends, group: @group %>
  <%= link_to "add member", "#add_friend_group", class: "btn btn-mini", data: {toggle: "modal"} %>
<% end %>
<%= render "join_form" if signed_in? %>
<% if @group.owned?(current_user)%>
  <td><%= link_to "Edit", "#" %></td>
  <td><%= link_to "Del", group_path(@group), method: :delete, data: {confirm: "Are you sure?"} %></td>
<% end %>